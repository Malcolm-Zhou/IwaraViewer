<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNightBG"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <TableRow>

        <EditText
            android:id="@+id/editTextPageNum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="Page Number"
            android:inputType="number"
            android:text="5"
            android:textColor="@color/colorNightText"
            android:textColorHint="@color/colorNightText" />

        <Spinner
            android:id="@+id/resSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorNightBG"
            android:onClick="onSumbit"
            android:text="Submit"
            android:textColor="@color/colorNightText"
            android:layout_weight="1"/>
    </TableRow>
    <ListView
        android:id="@+id/listviewsimple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorNightText"
        android:dividerHeight="2dp" />


</TableLayout>